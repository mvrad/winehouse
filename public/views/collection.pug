extends layout

block content
  header.header-home.header.header-content__home
    #collection-sm
    //- Code goes here
    #collection-lg
      .collection-container-lg
        .left-panel
          h2 My Collection
          .collection-main
            .collection-wine
              img(src="images/glass-00.svg", alt="Wine Glass").wine-glass
              |
              span.wine-name King Cabber Cellars 
              |
              span.wine-type Cabernet Sauvignon 
              |
              span.wine-year 2012 
              |
              img(src="images/note.svg", alt="Note").wine-note
              |
              .wine-delete &times; 
            .collection-wine
              img(src="images/glass-04.svg", alt="Wine Glass").wine-glass
              |
              span.wine-name Shelton Lake Winery
              |
              span.wine-type Riesling 
              |
              span.wine-year 2014 
              |
              img(src="images/note.svg", alt="Note").wine-note
              |
              .wine-delete &times; 

        .right-panel
          h2 Wine Search
          p Data provided by 
            a(id="snooth-link" href="http://www.snooth.com" target="_blank") Snooth
          form#search-form
            input.form-control(type="search" id="search" name="search" placeholder="Search millions of wines.")
          .search-dropdown
            ul.search-dropdown-list
              li.search-dropdown-list__image
              li.search-dropdown-list__name
              li.search-dropdown-list__varietal
              li.search-dropdown-list__vintage
              li.search-dropdown-list__type
              li.search-dropdown-list__price
              button#add-to-collection.btn Add To Collection