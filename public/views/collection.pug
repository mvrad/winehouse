extends layout

block content
  header.header-home.header.header-content__home
    #collection-sm
    //- Code goes here
    #collection-lg
      .collection-container-lg
        .left-panel
          h2 Wine Collection
          .collection-main

        .right-panel
          h2 Wine Search
          p Data provided by 
            a(id="snooth-link" href="http://www.snooth.com" target="_blank") Snooth
          form#search-form
            input.form-control(type="search" id="search" name="search" placeholder="Search millions of wines.")
          .search-dropdown
            ul.search-dropdown-list
              li.search-dropdown-list__image
              li
                span.labels Name: 
                .search-dropdown-list__name
              li
                span.labels Varietal: 
                .search-dropdown-list__varietal
              li
                span.labels Vintage: 
                .search-dropdown-list__vintage
              li
                span.labels Type: 
                .search-dropdown-list__type
              li
                span.labels Price: 
                .search-dropdown-list__price
              li#imgURL.search-dropdown-list__imgURL
              li#code.search-dropdown-list__code
              button#add-to-collection.btn Add To Collection
        .modal